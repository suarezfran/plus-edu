<section
    id="welcome"
    class="scroll-section relative flex items-center justify-center overflow-hidden"
>
    <!-- Background Video -->
    <div class="absolute inset-0 w-full h-full">
        <video
            autoplay
            muted
            loop
            playsinline
            class="w-full h-full object-cover"
        >
            <source src="/background-video.mp4" type="video/mp4" />
        </video>
        <!-- Video Overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900/70 via-gray-800/60 to-gray-700/50"></div>
    </div>

    <!-- Content Container -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
        <!-- Main Content -->
        <div class="space-y-8">
            <!-- Main Heading -->
            <h1 class="text-3xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-bold text-white leading-tight">
                <span class="block animate-fade-in-up opacity-0" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
                    Inspiración para el
                </span>
                <span class="block animate-fade-in-up opacity-0" style="animation-delay: 0.6s; animation-fill-mode: forwards;">
                    <span class="bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 bg-clip-text text-transparent animate-glow" style="background-size: 200% 200%; animation: gradientShift 3s ease-in-out infinite;">
                        Futuro
                    </span>
                </span>
            </h1>

            <!-- Subtitle -->
            <div class="animate-fade-in-up opacity-0" style="animation-delay: 1s; animation-fill-mode: forwards;">
                <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-white max-w-4xl mx-auto leading-relaxed font-medium tracking-wide">
                    <span class="block mb-2 text-gray-100 font-light">La educación innovadora empodera a los estudiantes</span>
                    <span class="block text-transparent bg-gradient-to-r from-blue-300 via-blue-400 to-blue-500 bg-clip-text font-semibold">
                        para enfrentar el futuro con creatividad y pensamiento crítico.
                    </span>
                </p>
            </div>

        </div>

    </div>

    <!-- Floating Elements for Visual Interest -->
    <div class="absolute top-20 left-10 w-4 h-4 bg-blue-400/30 rounded-full animate-float"></div>
    <div class="absolute top-40 right-20 w-6 h-6 bg-blue-300/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-20 w-3 h-3 bg-blue-500/40 rounded-full animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 right-10 w-5 h-5 bg-blue-400/25 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
    <div class="absolute top-60 left-1/4 w-2 h-2 bg-blue-300/50 rounded-full animate-pulse-slow"></div>
    <div class="absolute bottom-60 right-1/4 w-3 h-3 bg-blue-200/30 rounded-full animate-pulse-slow" style="animation-delay: 1.5s;"></div>
</section>
